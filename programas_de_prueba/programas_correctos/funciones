funciones

begin
    /# funcion que calcula 2^p #/
    ulongint fun myFunction (ulongint p)
    begin
        ulongint x;
        if (p = 0) then
            ret(2);
        else
            begin
                ret(2*myFunction(p-1));
            end;
        end_if;
    end

    u := myFunction(5);

    outf( { Programa terminado } );
end