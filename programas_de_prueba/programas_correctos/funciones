funciones

begin
    single d;
    /# Dberia tirar error por variable sin declarar #/
    e:=2;
    /# funcion que calcula 2^p #/
    ulongint fun myFunction (ulongint p)
    begin
        ulongint x;
        if (p = 0) then
            ret(2);
        else
            begin
                ret(2*myFunction(p-1));
            end;
        end_if;
    end

    x := myFunction(5);

    outf( {Programa terminado } );
end